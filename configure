rm -f Makefile

touch Makefile

#Define Project
printf "CXX=g++" >> Makefile
printf "PROG=cppdata" >> Makefile
printf "OBJS=lib.o main.o" >> Makefile

#All Project
printf "all: ${PROG}" >> Makefile

#Link Project
printf "${PROG}: ${OBJS}" >> Makefile
printf "\t${CXX} -o ${PROG} $^" >> Makefile

#Compile Project
printf "%.o: %.c:" >> Makefile
printf "\t${CXX} -c $< -o $@" >> Makefile

#Clean Project
printf "clean:" >> Makefile
printf "\trm -rf *.o ${PROG}" >> Makefile

cat Makefile
